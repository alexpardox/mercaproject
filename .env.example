# =========================================
# EJEMPLO DE CONFIGURACIÓN DE ENTORNO - MERCADÍA
# =========================================
# 
# Copia este archivo como .env y rellena con tus valores reales
# cp .env.example .env

# =========================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# =========================================

# Para Supabase
DB_HOST=db.tuproyecto.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USERNAME=postgres
DB_PASSWORD=tu_password_supabase_aqui
DB_URL=postgresql://postgres:tu_password_supabase_aqui@db.tuproyecto.supabase.co:5432/postgres

# =========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =========================================

SPRING_PROFILES_ACTIVE=production
APP_NAME=Mercadía
APP_VERSION=1.0.0
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/mercadia

# =========================================
# CONFIGURACIÓN DE SEGURIDAD
# =========================================

JWT_SECRET=tu_clave_secreta_jwt_muy_larga_y_segura_aqui
JWT_EXPIRATION=86400000
SESSION_TIMEOUT=1800
SESSION_COOKIE_NAME=MERCADIA_SESSION

# =========================================
# CONFIGURACIÓN DE LOGGING
# =========================================

LOG_LEVEL=INFO
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SECURITY=DEBUG

# =========================================
# CONFIGURACIÓN DE ARCHIVOS
# =========================================

UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB

# =========================================
# CONFIGURACIÓN DE EMAIL (opcional)
# =========================================

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_email
MAIL_FROM=noreply@mercadia.com

# =========================================
# CONFIGURACIÓN DE SUPABASE
# =========================================

SUPABASE_URL=https://tuproyecto.supabase.co
SUPABASE_ANON_KEY=tu_clave_publica_supabase
SUPABASE_SERVICE_KEY=tu_clave_servicio_supabase

# =========================================
# CONFIGURACIÓN DE DESARROLLO
# =========================================

DEBUG=false
DEV_TOOLS_ENABLED=false
